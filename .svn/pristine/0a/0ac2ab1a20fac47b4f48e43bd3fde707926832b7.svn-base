/* end Header */
.container {
  /*  width: 940px;*/
    margin: 0px auto;
}

div.clear {
    clear: both;
}

ul {
    display: block;
    list-style: none;
}

li {
    text-decoration: none;
    margin-bottom: 5px;
}

div.wrap_content {
    float: none;
    margin: 0px auto;
}

div.content {
    float: left;
   /* width: 960px;*/
    margin: 0px auto;
    text-align: left;
}

.footer {
    padding-top: 20px;
    width: 100%;
    height: 80px;
    background: #DEDEDE url(images/img01.png) repeat;
    text-align: center;
}

.item,.summary,.selection {
    width: 100%;
    border: #e3e3e3 1px solid;
}

div.item {
    margin-top: 10px;
}

div.item .item_app{
    width: 250px;
}

.float {
    float: left;
}

#statistics_app {
    margin-top: 10px;
/*    width: 900px;*/
    padding: 0 0 0 0;
    overflow: auto;
}

.app_info {
    border: 6px solid #C3C3C3;
    width: 900px;
}

.label {
    /*width: 960px;*/
    width: 100%;
    border: 1px solid #C3C3C3;
    border-top: 4px solid #B50006;
    padding: 10px 0px;
    padding-right: 0;
    font-weight: 600;
    font-size: 1.2em;
    margin-bottom: 10px;
    margin-top: 15px;
    background: -webkit-gradient(linear, center top, center bottom, from(#FCFCFC),
        to(#F1F1F1) );
    background: -moz-linear-gradient(top, #FCFCFC, #F1F1F1);
    background: -webkit-gradient(linear, center top, center bottom, from(#FCFCFC),
        to(#F1F1F1) );
}

.main_info {
    width: 100%;
}
.main_info .info{
    width: 30%;
}
.main_info .image{
    
}
.main_info .detail_info {
    width:30%;
    border-left: #e6e6e6 1px solid;
}


.main_info .info .info_item div {
    margin: 10px 0 0 0;
    padding: 10px 0 0 0;
    width: 150px;
    height: 25px;
    text-align: center;
    box-shadow: 2px 2px 5px #ff5500;
}

.main_info .image img {
    width: 130px;
    height: 130px;
    margin: 10px 10px 10px 10px;
    padding: 0;
    border-radius: 10px;
}

.main_info .image p {
    margin: 0px 10px 10px 10px;
    background-color: #a2a2a2;
    font-size: 20px;
    border-radius: 5px;
    text-align: center;
}

.detail_info .info_item div {
    width: 185px;
    margin: 10px 0 5px 5px;
    text-align: center;
    min-height: 25px;
    box-shadow: 2px 2px 5px #ff5500;
}

/* start slider */
.wrap {
    width: 640px;
    margin: 20px;
    background: #ffc;
}

body div.slider {
    overflow: hidden;
    position: relative;
    min-width: 900px;
    padding: 20px;
    height: 260px !important;
    border: 2px solid #ED4E4E;
    border-radius: 7px;
    height: 260px !important;

}

body div.slider ul {
    margin: 0;
    padding: 0;
    height: 260px;
}

body div.slider li {
    float: left;
    list-style: none;
    margin: 0 5px 0 0;
}

body div.slider li {
    text-align: center;
    line-height: 160px;
    font-size: 25px;
}

body div.slider ul li img {
    margin: 0;
    padding: 0;
    width: 210px;
    height: 260px;
    border: 2px solid #C3C3C3;
    height: 260px;
}

/* end slider */
img.app_icon {
    padding: 0;
    margin: 5px;
    /* border: 1px solid #ED156C; */
    width: 150px;
    height: 150px;
    border-radius: 25px;
}

div.summary{
    margin: 10px 0 0 0;
}
div.description{
    margin: 0px;
    color: black;
}
.summary .info p{
    margin: 10px;
    text-indent: 10px;
}

div.selection .country, .date, .install_info{
    padding: 17px 0px 0px 17px;
    color: #000000;
}
div.install_info ul{
    margin: 0 0 10px 20px;
}

#statistics{
    margin-top: 20px;
}

.rating p{
    padding: 0 0 0 24px;
    margin: 0;
    text-align: left;

}

.rating p.rating{
    color: yellow;
    font-size: 1em;
}

.rating p.rating_count{
    color: #e3e3e3;
    font-size: 0.75em;
}

